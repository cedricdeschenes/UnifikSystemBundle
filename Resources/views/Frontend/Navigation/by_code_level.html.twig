{% if sections %}
    {% for section in sections %}
        <li class="{% if section.hasChildren %}with_sublevel {% endif %}{% if section.isSelected %}selected {% endif %}{% if loop.first %}first_item {% endif %}{% if loop.last %}last_item{% endif %}">
            <a href="{% if section.entity.route %}{{ path(section.entity.route, section.entity.routeParams) }}{% endif %}"{% if section.isSelected %} class="selected"{% endif %}>
                {{ section }}
            </a>
            {% if exploded or (section.isSelected and section.hasChildren) %}
                {% if level < maxLevel %}
                    <ul class="level_{{ level }}">
                        {% include 'EgzaktSystemBundle:Frontend/Navigation:by_code_level.html.twig' with { 'sections': section.children, 'level': level + 1 } %}
                    </ul>
                {% endif %}
            {% endif %}
        </li>
    {% endfor %}
{% endif %}