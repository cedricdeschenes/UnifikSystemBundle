{% extends 'EgzaktSystemBundle:Backend/Section:layout.html.twig' %}

{% block content_header %}
    <h1>{% trans with { '%entity%': 'Subsections'|trans } %}%entity% list{% endtrans %}</h1>
{% endblock %}

{% block content_main %}

    <script type="text/javascript">
        var url_ordre = '{{ path('egzakt_system_backend_section_order', { 'section_id': section.id }) }}';
    </script>

    <div id="list_actions_bar">
        <a class="add" href="{{ path('egzakt_system_backend_section_edit', { 'section_id': section.id }) }}">{% trans %}Add a subsection{% endtrans %}</a>
    </div>

    <div class="list_box">
        <table cellspacing="0" class="table-autosort">
            <thead>
            <tr>
                <th class="default_ordering table-sortable:numeric">
                    {% trans %}Ordering{% endtrans %}
                </th>
                <th class="name table-sortable:ignorecase">
                    {% trans %}Name{% endtrans %}
                </th>
                <th class="table-sortable:numeric">
                    {% trans %}Nb. of subsections{% endtrans %}
                </th>
                <th class="update table-sortable:date">
                    {% trans %}Last update{% endtrans %}
                </th>
                <th colspan="2" class="switch_list_mode">
                    <a href="#"><img src="{{ asset("bundles/egzaktsystem/backend/images/buttons/switch_list_mode_off.gif") }}" width="20" height="20" alt="" /></a>
                </th>
            </tr>
            <tr class="filters">
                <th class="default_ordering">
                    &nbsp;
                </th>
                <th class="name">
                    <input onkeyup="Table.filter(this,this)" class="filter" alt="{{ "Search a name"|trans }}" />
                </th>
                <th>
                    &nbsp;
                </th>
                <th>
                    &nbsp;
                </th>
                <th>
                    &nbsp;
                </th>
                <th>
                    &nbsp;
                </th>
            </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr id="item_{{ entity.id }}">
                    <td class="default_ordering">
                        {{ entity.ordering }}
                    </td>
                    <td class="name{% if not entity.active %} inactive{% endif %}">
                        <a href="{{ path('egzakt_system_backend_section_edit', { 'id': entity.id, 'section_id': section.id }) }}">{{ entity.i18nTitle|raw }}</a>
                    </td>
                    <td>
                        {{ entity.children|length }}
                    </td>
                    <td>
                        {{ entity.updatedAt|date('Y-m-d') }}
                    </td>
                    <td class="edit">
                        <a href="{{ path('egzakt_system_backend_section_edit', { 'id': entity.id, 'section_id': section.id }) }}" title="{% trans %}Edit{% endtrans %}">
                            <img src="{{ asset('bundles/egzaktsystem/backend/images/buttons/edit.png') }}" width="15" height="15" alt="" />
                        </a>
                    </td>
                    <td class="delete">
                        <a href="{{ path('egzakt_system_backend_section_delete', { 'id': entity.id, 'section_id': section.id }) }}" rel="{{ path('egzakt_system_backend_section_delete', { 'id': entity.id, 'section_id': section.id, 'message': true }) }}" title="{% trans %}Delete{% endtrans %}">
                            <img src="{{ asset('bundles/egzaktsystem/backend/images/buttons/delete.png') }}" width="12" height="15" alt="" />
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="total">
            <span class="sub-total"></span>
            {{ entities|length }} {% trans %}result{% endtrans %} {{ entities|length > 1 ? 's' : '' }}
        </div>
    </div>

{% endblock %}